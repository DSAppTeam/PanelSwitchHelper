<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chat"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/sh_activity_btn"
                android:padding="10dp"
                android:text="聊天场景(Activity)：无标题栏"
                android:textColor="@color/btn_activity_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/chat_toolbar"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/sh_activity_btn"
                android:padding="10dp"
                android:text="聊天场景(Activity)：有标题栏"
                android:textColor="@color/btn_activity_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/chat_cus_toolbar"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/sh_activity_btn"
                android:padding="10dp"
                android:text="聊天场景(Activity)：自定义标题栏"
                android:textColor="@color/btn_activity_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/chat_color"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/sh_activity_btn"
                android:padding="10dp"
                android:text="聊天场景(Activity)：有标题栏，状态栏着色"
                android:textColor="@color/btn_activity_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/chat_transparent"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/sh_activity_btn"
                android:padding="10dp"
                android:text="聊天场景(Activity)：无标题栏，状态栏透明，不绘制到状态栏"
                android:textColor="@color/btn_activity_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/chat_transparent_under_status_bar"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/sh_activity_btn"
                android:padding="10dp"
                android:text="聊天场景(Activity)：无标题栏，状态栏透明，绘制到状态栏"
                android:textColor="@color/btn_activity_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/chat_fragment"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/sh_fragment_btn"
                android:padding="10dp"
                android:text="聊天场景(Fragment)：无标题栏"
                android:textColor="@color/btn_fragment_text"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/chat_fragment_toolbar"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/sh_fragment_btn"
                android:padding="10dp"
                android:text="聊天场景(Fragment)：自定义标题栏"
                android:textColor="@color/btn_fragment_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/chat_color_fragment"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/sh_fragment_btn"
                android:padding="10dp"
                android:text="聊天场景(Fragment)：自定义标题栏，状态栏着色"
                android:textColor="@color/btn_fragment_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/chat_transparent_fragment"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/sh_fragment_btn"
                android:padding="10dp"
                android:text="聊天场景(Fragment)：自定义标题栏，状态栏透明"
                android:textColor="@color/btn_fragment_text"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/chat_special_page_dialog_fragment"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/sh_special_page_btn"
                android:padding="10dp"
                android:text="聊天场景(DialogFragment)"
                android:textColor="@color/btn_special_page_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/chat_special_page_popupwindow"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/sh_special_page_btn"
                android:padding="10dp"
                android:text="聊天场景(PopupWindow)"
                android:textColor="@color/btn_special_page_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/chat_special_page_dialog"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/sh_special_page_btn"
                android:padding="10dp"
                android:text="聊天场景(Dialog)"
                android:textColor="@color/btn_special_page_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/video"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/sh_video_btn"
                android:padding="10dp"
                android:text="特殊场景-视频播放(优于bilibili)"
                android:textColor="@color/btn_video_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/feed"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/sh_video_btn"
                android:padding="10dp"
                android:text="特殊场景-信息流评论(同微信朋友圈效果)"
                android:textColor="@color/btn_video_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/live_pc"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/sh_video_btn"
                android:padding="10dp"
                android:text="特殊场景-电脑直播(优于虎牙效果)"
                android:textColor="@color/btn_video_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/live_phone"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/sh_video_btn"
                android:padding="10dp"
                android:text="特殊场景-手机直播(优于抖音效果)"
                android:textColor="@color/btn_video_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/linear_content"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/sh_content_btn"
                android:padding="10dp"
                android:text="API-内容容器(线性布局)"
                android:textColor="@color/btn_content_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/relative_content"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/sh_content_btn"
                android:padding="10dp"
                android:text="API-内容容器(相对布局)"
                android:textColor="@color/btn_content_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/frame_content"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/sh_content_btn"
                android:padding="10dp"
                android:text="API-内容容器(帧布局)"
                android:textColor="@color/btn_content_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cus_content"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/sh_content_btn"
                android:padding="10dp"
                android:text="API-内容容器(自定义布局)"
                android:textColor="@color/btn_content_text"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/reset_by_default"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/sh_reset_btn"
                android:padding="10dp"
                android:text="API-点击内容容器收起面板(默认处理)"
                android:textColor="@color/btn_reset_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/reset_by_empty"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/sh_reset_btn"
                android:padding="10dp"
                android:text="API-点击内容容器收起面板(添加空白子 view)"
                android:textColor="@color/btn_reset_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/reset_by_hook_action_up"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/sh_reset_btn"
                android:padding="10dp"
                android:text="API-点击内容容器收起面板(拦截子自 view ACTION_UP)"
                android:textColor="@color/btn_reset_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tip"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/sh_tip_btn"
                android:padding="10dp"
                android:text="@string/tip"
                android:textColor="@color/btn_tip_text"
                android:textStyle="bold" />
        </LinearLayout>

    </ScrollView>
</layout>